<div class="col-md-6">
    <h3>Add exercise:</h3>

    <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown"
            aria-haspopup="true" aria-expanded="false">
            Add a workout
        </button>
        <div class="dropdown-menu" id="category-list" aria-labelledby="dropdownMenu2">
            <button class="dropdown-item" data-id= "1" type="button">Weight lifting</button>
            <button class="dropdown-item" data-id= "2" type="button">Cardio</button>
        </div>
    </div>


    <form class="form new-exercise-form">
         <div class="form-group">
            <label for="exercise-name">Choose Workout:</label>
            {{!-- <input class="form-input" type="text" id="exercise-name" name="exercise-name" /> --}}
            <select class="form-select form-select-lg mb-3" id="/" aria-label=".form-select-lg example">
  <option selected>None</option>
  <option value="Weight Lifting">Weight Lifting</option>
  <option value="Cardio">Cardio</option>
</select>
        <div class="form-group">
            <label for="exercise-name">Exercise Name:</label>
            <input class="form-input" type="text" id="exercise-name" name="exercise-name" />
        </div>
        <div class="form-group">
            <label for="exercise-weight">Exercise Weight in Lbs:</label>
            <input class="form-input" type="number" id="exercise-weight" name="exercise-weight" />
        </div>
        <div class="form-group">
            <label for="exercise-reps">Exercise Reps:</label>
            <input class="form-input" type="number" id="exercise-reps" name="exercise-reps" />
        </div>
        <div class="form-group">
            <label for="exercise-duration">Exercise Duration:</label>
            <input class="form-input" type="number" id="exercise-duration" name="exercise-duration" />
        </div>
        <div class="form-group">
            <button type="submit" id="category-btn" class="btn btn-primary">Create</button>
        </div>
    </form>
</div>

<script src="/js/exerciseform.js"></script>